<link rel='stylesheet' href='/stylesheets/admin.css' />

<body class="bg-dark">

  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Shop Login</div>
      <div class="card-body">

        <div class="card-body">
          {{#if hasErrors}}
          <div class="alert alert-danger">
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
          </div>
          {{/if}}
          <form action="/shops/signin" method="POST">
            <div class="form-group">
              <div class="form-label-group">
                <input type="email" id="inputEmail" name= "email" class="form-control" placeholder="Email" required="required"
                  autofocus="autofocus">

              </div>
            </div>
            <div class="form-group">
              <div class="form-label-group">
                <input type="password" id="inputPassword" name= "password" class="form-control" placeholder="Password" required="required">

              </div>
            </div>
            <div class="form-group">
              <div class="checkbox">
                <label>
                  <input type="checkbox" value="remember-me">
                  Remember Password
                </label>
              </div>
              <div class="form-group">
                        <div class="form-label-group">
                            <input type="hidden" name="_csrf" value="{{csrfTokken}}">
                        </div>
                    </div>
            </div>
             <button type="submit" class="btn btn-primary btn-block">Login</button>
          </form>
          <div class="text-center">
            <a class="d-block small mt-3" href="register.html">Forgot Password?</a>
            <a class="d-block small mt-3" href="/shops/signup" style="color:rgb(8, 148, 55)">Start selling at
              A2ZOnlineShoppy</a>
          </div>
        </div>
      </div>
    </div>

</body>